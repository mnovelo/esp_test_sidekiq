<%= form_with(model: blast, local: true) do |form| %>
  <% if blast.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blast.errors.count, "error") %> prohibited this blast from being saved:</h2>

      <ul>
        <% blast.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :message_id %>
    <%= form.collection_select(:message_id, Message.all, :id, :title) %>
  </div>

  <div class="field">
    <%= form.label :recipients %>
    <%= form.select(:recipients, [['Students', 'students'], ['Parents', 'parents']], { include_hidden: false }, multiple: true ) %>
  </div>

  <div class="field">
    <%= form.label :send_at %>
    <%= form.datetime_select :send_at %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
